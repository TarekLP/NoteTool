<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManageUsersViewController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: -color-bg-default;">
    <Label text="Manage System Users">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>
    <ListView fx:id="userListView" VBox.vgrow="ALWAYS" />
    <HBox spacing="5">
        <TextField fx:id="newUserField" promptText="Enter new user name..." HBox.hgrow="ALWAYS" />
        <Button onAction="#handleAddUser" text="Add User" styleClass="success" />
    </HBox>
    <Button onAction="#handleClose" text="Close" maxWidth="Infinity" />
</VBox>